{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitAny": false,

    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "src/modules/auth/auth.controller.ts"]
}
